rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isSelf(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdminOrOwner() {
      return isSignedIn() && (
        (request.auth.token.role in ['admin', 'owner']) ||
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'])
      );
    }

    function isOwner() {
      return isSignedIn() && (
        request.auth.token.role == 'owner' ||
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner')
      );
    }

    // --- CORE COLLECTIONS ---

    match /users/{userId} {
      allow read, write: if isSelf(userId) || isAdminOrOwner();
      
      // Wishlist Subcollection (Restored)
      match /wishlist/{productId} {
        allow read, write: if isSelf(userId);
      }
    }

    match /products/{productId} {
      allow read: if true;
      allow create: if isAdminOrOwner();
      allow update: if isOwner() || 
        (isAdminOrOwner() && 
         request.resource.data.retailPrice == resource.data.retailPrice &&
         request.resource.data.resellerPrice == resource.data.resellerPrice &&
         request.resource.data.costPrice == resource.data.costPrice &&
         request.resource.data.flashSalePrice == resource.data.flashSalePrice &&
         request.resource.data.stock == resource.data.stock
        );
      allow delete: if isOwner();
    }

    match /orders/{orderId} {
      allow read: if true; 
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.userId || 
        isAdminOrOwner()  // âœ… FIX: Admin JUGA bisa update orders (tambah pembayaran, dll)
      );
      allow delete: if isOwner();
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdminOrOwner();
    }

    match /banners/{bannerId} {
      allow read: if true;
      allow write: if isAdminOrOwner();
    }

    // --- FEATURE COLLECTIONS (Restored) ---

    // Flash Sales
    match /flashSales/{flashSaleId} {
      allow read: if true;
      allow write: if isOwner();
    }
    match /flashSale/{documentId} {
      allow read: if true;
      allow write: if isOwner();
    }

    // Print Jobs (Cloud Printing)
    match /print_jobs/{jobId} {
      allow read: if true; // Bridge app needs access
      allow create: if isSignedIn(); // Users create print jobs
    }

    // Notifications & Queue
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow create: if isOwner();
      allow update: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow delete: if isOwner();
    }
    
    match /notificationQueue/{queueId} {
      allow create: if isSignedIn(); // For triggering role upgrade notifications
      allow read, write: if isAdminOrOwner();
    }

    // Stock Management (Mutations & Adjustments)
    match /stock_mutations/{mutationId} {
      allow read: if isAdminOrOwner();
      allow create: if isAdminOrOwner();
    }
    
    match /stock_adjustments/{adjustmentId} {
      allow read, write: if isAdminOrOwner();
    }
    
    match /productBatches/{batchId} {
      allow read: if true;
      allow create: if isAdminOrOwner();
      allow update: if isSignedIn(); // Required for Checkout Stock Deduction
      allow delete: if isOwner();
    }

    match /stockOpnameSessions/{sessionId} {
      allow read: if isAdminOrOwner();
      allow create, update: if isAdminOrOwner();
      allow delete: if isOwner();
    }

    // Vouchers
    match /vouchers/{voucherId} {
      allow read: if isSignedIn();
      allow create, delete: if isOwner();
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.assignedTo || isAdminOrOwner()
      );
    }

    // Financials
    match /financial_categories/{categoryId} {
      allow read, write: if isOwner();
    }
    match /financial_payment_methods/{methodId} {
      allow read: if true;
      allow write: if isOwner();
    }
    match /financial_entries/{entryId} {
      allow read, write: if isOwner();
    }
    
    // Transactions (Reporting)
    match /transactions/{transactionId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isOwner();
    }

    // User Data
    match /user_carts/{userId} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    match /user_addresses/{addressId} {
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    // WhatsApp/Product Ops
    match /pending_products/{productId} {
      allow read, write: if isAdminOrOwner();
    }
    match /product_drafts/{draftId} {
      allow read, write: if isAdminOrOwner();
    }
    match /product_categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isOwner();
    }
    match /collections/{collectionId} {
      allow read: if true;
      allow write: if isAdminOrOwner();
    }
    match /globalindex/{productId} {
      allow read: if true;
      allow write, delete: if isOwner();
    }

    // Payment Detection
    match /paymentDetectionsPending/{detectionId} {
      allow create: if isOwner();
      allow read, update, delete: if isAdminOrOwner();
    }
    match /paymentDetectionsVerified/{detectionId} {
      allow read, write: if isAdminOrOwner();
    }
    match /paymentDetectionsIgnored/{detectionId} {
      allow read, write: if isAdminOrOwner();
    }
    match /paymentDetectionSettings/{settingId} {
      allow read, write: if isAdminOrOwner();
    }
    match /paymentGroups/{groupId} {
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.userId || isAdminOrOwner()
      );
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.userId || isAdminOrOwner()
      );
      allow delete: if isAdminOrOwner();
    }
    match /autoVerificationLogs/{logId} {
      allow read: if isAdminOrOwner();
      allow create: if isAdminOrOwner();
      allow update, delete: if isOwner();
    }

    // AI & Security
    match /aiApiKeys/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId && isOwner();
    }

    // --- NEW RULES (POINT SYSTEM) ---

    // Point Settings
    match /point_settings/{docId} {
      allow read: if isSignedIn();
      allow write: if isOwner();
    }

    // Point History
    match /point_history/{docId} {
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.userId || isAdminOrOwner()
      );
      allow create: if isSignedIn();
    }

    // --- CACHE COLLECTIONS (for API caching) ---
    
    // Shipping Cost Cache (used by api/rajaongkir/cost-cached.js)
    match /shipping_cache/{cacheId} {
      allow read, write: if true;
    }

    // Address Cache Collections (used by api/address-cached.js)
    match /address_provinces/{docId} {
      allow read, write: if true;
    }
    match /address_cities/{docId} {
      allow read, write: if true;
    }
    match /address_districts/{docId} {
      allow read, write: if true;
    }
    match /address_subdistricts/{docId} {
      allow read, write: if true;
    }
  }
}