rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isSelf(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdminOrOwner() {
      return isSignedIn() && (
        (request.auth.token.role in ['admin', 'owner']) ||
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'])
      );
    }

    function isOwner() {
      return isSignedIn() && (
        request.auth.token.role == 'owner' ||
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner')
      );
    }

    // Allow read access to transactions for reporting (public read for production)
    // SECURITY: Anyone can create, only OWNER can edit/delete
    match /transactions/{transactionId} {
      allow read: if true; // Public read for reporting system
      allow create: if request.auth != null; // Any authenticated user can create
      allow update, delete: if isOwner(); // Only owner can edit/delete
    }

    // Products - Owner full access, Admin limited (no delete, no price/stock edit)
    match /products/{productId} {
      allow read: if true; // Public read for catalog
      allow create: if isAdminOrOwner(); // Owner & Admin can add products
      
      // Update: Owner can edit all, Admin can edit but NOT price/stock fields
      // Protected fields: retailPrice, resellerPrice, costPrice, flashSalePrice, stock
      allow update: if isOwner() || 
        (isAdminOrOwner() && 
         request.resource.data.retailPrice == resource.data.retailPrice &&
         request.resource.data.resellerPrice == resource.data.resellerPrice &&
         request.resource.data.costPrice == resource.data.costPrice &&
         request.resource.data.flashSalePrice == resource.data.flashSalePrice &&
         request.resource.data.stock == resource.data.stock
        );
      
      // Delete: Only owner
      allow delete: if isOwner();
    }

    // WhatsApp integration - Admin & Owner only
    match /pending_products/{productId} {
      allow read, write: if isAdminOrOwner();
    }

    // WhatsApp Draft Queue - Admin & Owner only
    match /product_drafts/{draftId} {
      allow read, write: if isAdminOrOwner();
    }

    // Allow read access to orders for reporting (public read for production)
    // SECURITY: Only OWNER can update order status (including marking as paid)
    match /orders/{orderId} {
      allow read: if true; // Public read for reporting system
      allow create: if request.auth != null; // Any authenticated user can create order
      
      // Update: User can update own order, OR owner can update any order
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.userId ||  // User updates own order
        isOwner()  // Only OWNER can update any order (for status changes)
      );
      
      // Delete: Only owner can delete orders
      allow delete: if isOwner();
    }

    // Allow read/write access to user profiles
    // - User can read/write dirinya sendiri
    // - Admin/owner dapat membaca & menulis semua user
    match /users/{userId} {
      allow read, write: if isSelf(userId) || isAdminOrOwner();
    }

    // Categories - Admin & Owner can manage
    match /categories/{categoryId} {
      allow read: if true; // Public read
      allow write: if isAdminOrOwner(); // Only Admin/Owner can edit
    }

    // Flash Sales - OWNER ONLY can manage
    match /flashSales/{flashSaleId} {
      allow read: if true; // Public read for promo display
      allow write: if isOwner(); // Only Owner can manage flash sales
    }

    // Flash Sale Config - OWNER ONLY
    match /flashSale/{documentId} {
      allow read: if true; // Public read for promo display
      allow write: if isOwner(); // Only Owner can configure
    }

    // Product Batches - Owner full access, Admin limited (same as products)
    match /productBatches/{batchId} {
      allow read: if true; // Public read
      allow create: if isAdminOrOwner(); // Owner & Admin can add
      allow update: if isAdminOrOwner(); // Owner & Admin can update
      allow delete: if isOwner(); // Only owner can delete
    }

    // Global index for product search - OWNER ONLY can write
    match /globalindex/{productId} {
      allow read: if true; // Public read for search
      allow write, delete: if isOwner(); // Only owner can modify
    }

    // Allow read/write access to user carts for authenticated users
    match /user_carts/{userId} {
      allow read: if true; // Public read for reporting system
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read/write access to user addresses for authenticated users
    match /user_addresses/{addressId} {
      allow read: if true; // Public read for reporting system
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Financial categories - OWNER ONLY (sensitive data)
    match /financial_categories/{categoryId} {
      allow read: if isOwner();
      allow write: if isOwner();
    }

    // Financial payment methods - Public read (for checkout), Owner only write
    match /financial_payment_methods/{methodId} {
      allow read: if true;  // Public read - dibutuhkan untuk checkout & laporan
      allow write: if isOwner();
    }

    // Financial entries - OWNER ONLY (very sensitive!)
    match /financial_entries/{entryId} {
      allow read: if isOwner();
      allow write: if isOwner();
    }

    // Product categories (Master data)
    match /product_categories/{categoryId} {
      allow read: if true; // Public read
      allow create, update, delete: if isOwner(); // Only owner can edit
    }

    // Payment Detection System - OWNER ONLY for create (security)
    match /paymentDetectionsPending/{detectionId} {
      allow create: if isOwner();  // Only owner can create (not admin)
      allow read, update, delete: if isAdminOrOwner();
    }

    match /paymentDetectionsVerified/{detectionId} {
      allow read, write: if isAdminOrOwner();
    }

    match /paymentDetectionsIgnored/{detectionId} {
      allow read, write: if isAdminOrOwner();
    }

    match /paymentDetectionSettings/{settingId} {
      allow read, write: if isAdminOrOwner();
    }

    // Payment Groups - Users can create/read their own, Admin can read/write all
    match /paymentGroups/{groupId} {
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.userId || 
        isAdminOrOwner()
      );
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.userId || 
        isAdminOrOwner()
      );
      allow delete: if isAdminOrOwner();
    }

    // AI API Keys - Encrypted API keys for Gemini/GLM AI services
    // Only owner can read/write their own keys
    match /aiApiKeys/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId && isOwner();
    }

    // Auto Verification Logs - Audit trail for automatic payment verification
    // Admin/Owner can read, system writes automatically
    match /autoVerificationLogs/{logId} {
      allow read: if isAdminOrOwner();
      allow create: if isAdminOrOwner(); // System creates logs
      allow update, delete: if isOwner(); // Only owner can modify/delete logs
    }

    // Stock Opname Sessions - Inventory counting sessions
    // Admin/Owner can read (view sessions), Owner can create/update/delete
    match /stockOpnameSessions/{sessionId} {
      allow read: if isAdminOrOwner();
      allow create, update: if isAdminOrOwner(); // Admin can create, Owner can approve
      allow delete: if isOwner(); // Only owner can delete sessions
    }
  }
}