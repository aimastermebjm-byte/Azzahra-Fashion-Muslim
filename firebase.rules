rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to transactions for reporting (public read for reports)
    // Allow write only for authenticated users
    match /transactions/{transactionId} {
      allow read: if true; // Public read for reporting system
      allow write, create: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Allow read/write access to products for authenticated users
    match /products/{productId} {
      allow read: if true; // Public read for reporting system
      allow write: if request.auth != null;
    }

    // Allow read/write access to orders for authenticated users
    match /orders/{orderId} {
      allow read, write, create: if request.auth != null;
      allow read, write, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Allow read/write access to user profiles for authenticated users
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read access to categories for authenticated users
    match /categories/{categoryId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid != null;
    }

    // Allow read/write access to flash sales for authenticated users
    match /flashSales/{flashSaleId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Allow read/write access to flash sale config for authenticated users
    match /flashSale/{documentId} {
      allow read, write: if request.auth != null && request.auth.uid != null;
    }
  }
}