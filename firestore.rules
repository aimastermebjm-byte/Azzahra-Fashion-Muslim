rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPER FUNCTIONS ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isAuthenticated() && getUserData().role == 'admin';
    }

    function isOwner() {
      return isAuthenticated() && getUserData().role == 'owner';
    }
    
    function isAdminOrOwner() {
      return isAuthenticated() && (
        getUserData().role in ['admin', 'owner']
      );
    }

    // --- EXISTING RULES (USERS & ORDERS) ---

    // Users
    match /users/{userId} {
      allow read: if isAuthenticated();
      // Allow update self AND admin/owner
      allow update: if isAuthenticated() && (request.auth.uid == userId || isAdminOrOwner()); 
      allow create: if isAuthenticated();
    }
    
    // Orders
    match /orders/{orderId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdminOrOwner()
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || isAdminOrOwner()
      );
    }

    // Products (Public read, admin write)
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdminOrOwner();
    }
    
    // Vouchers
    match /vouchers/{voucherId} {
        allow read: if true;
        allow write: if isAdminOrOwner();
    }

    // --- NEW RULES (POINT SYSTEM) ---

    // Point Settings
    // Read: Authenticated (Reseller need to see point value)
    // Write: Owner Only
    match /point_settings/{docId} {
      allow read: if isAuthenticated();
      allow write: if isOwner();
    }

    // Point History
    // Read: Owner (all), User (own history)
    // Create: Authenticated (Reseller redeem, Admin/System distribute)
    match /point_history/{docId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == resource.data.userId || isAdminOrOwner()
      );
      allow create: if isAuthenticated();
    }
  }
}
